{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts</h1>

    <table>
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>
                    <div class="item-actions">
                        <a href="">
                            See
                        </a>
                        <a href="">
                            Edit
                        </a>
                        <a href="">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No posts found</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
