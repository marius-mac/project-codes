{% trans_default_domain 'FOSUserBundle' %}
<h1 class="text-center">{{ title }}</h1>

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" novalidate="novalidate">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="login-container">
        <form>
            <div class="form-group">
                <label for="username">{{ 'security.login.email'|trans }}</label>
                <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
            <div class="checkbox">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
            <div class="row text-center">
                <button type="submit" class="btn btn-primary btn-lg" id="_submit" name="_submit">
                    {{ 'security.login.submit'|trans }}
                </button>
            </div>
        </form>
    </div>
    <div class="login-help">
        <p>
            Neturite paskyros mūsų puslapyje? <a href="{{ path('fos_user_registration_register') }}">Užsiregistruokite</a>
        </p>
        <p>
            Pamiršote slaptažodį? <a href="{{ path('fos_user_resetting_request') }}">Atkurti slaptažodį</a>
        </p>
    </div>
</form>
