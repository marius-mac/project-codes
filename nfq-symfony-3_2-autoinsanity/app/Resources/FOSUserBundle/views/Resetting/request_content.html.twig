{% trans_default_domain 'FOSUserBundle' %}

<h1 class="text-center">{{ title }}</h1>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request" novalidate="novalidate">
    <div class="form-group">
        <label for="username">{{ 'resetting.request.email'|trans }}</label>
        <input class="form-control" type="text" id="username" name="username" required="required" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary btn-lg" type="submit">{{ 'resetting.request.submit'|trans }}</button>
    </div>
</form>
