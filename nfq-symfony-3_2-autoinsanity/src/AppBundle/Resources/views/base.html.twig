<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-multiselect.css') }}" type="text/css"/>
        <link href="{{ asset('styles/style.css') }}" rel="stylesheet" />
        <title>{% block title %}{% endblock %} - {{ 'title.website_name'|trans }}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="body">
            <nav class="navbar navbar-default navbar-static-top navbar-inverse">
                <div class="container">
                    <div class=container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                                {{ 'title.website_name'|trans }}
                            </a>
                            <button
                                    type="button"
                                    class="navbar-toggle collapsed"
                                    data-toggle="collapse"
                                    data-target="#navbar-collapse"
                                    aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse" id="navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="{{ path('detailed_search') }}">
                                        <span class="glyphicon glyphicon-search"></span>
                                        {{ 'header.link.detailed_search'|trans }}
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <li>
                                        <a href="{{ path('searches') }}">
                                            <span class="glyphicon glyphicon-star"></span>
                                            {{ 'header.link.searches'|trans }}
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('pinned') }}">
                                            <span class="glyphicon glyphicon-heart"></span>
                                            {{ 'header.link.pinned'|trans }}
                                        </a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#"
                                           class="dropdown-toggle"
                                           data-toggle="dropdown"
                                           role="button"
                                           aria-haspopup="true"
                                           aria-expanded="false">
                                            <span class="glyphicon glyphicon-wrench"></span>
                                            {{ 'header.link.settings'|trans }}
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="{{ path('fos_user_change_password') }}">
                                                    {{ 'header.link.change_password'|trans() }}
                                                </a>
                                            </li>
                                            <li>
                                                <a href="{{ path('fos_user_profile_edit') }}">
                                                    {{ 'header.link.change_email'|trans() }}
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <p class="navbar-btn">
                                            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default">
                                                <span class="glyphicon glyphicon-off"></span>
                                                {{ 'header.link.logout'|trans }}
                                            </a>
                                        </p>
                                    </li>
                                {% else %}
                                    <li>
                                        <p class="navbar-btn">
                                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">
                                                {{ 'header.link.register'|trans }}
                                            </a>
                                        </p>

                                    </li>
                                    <li>
                                        <p class="navbar-btn">
                                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary">
                                                {{ 'header.link.login'|trans }}
                                            </a>
                                        </p>

                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            {% block jumbotron %}{% endblock %}
            <div id="body-container" class="container">
                {% block body %}{% endblock %}
            </div>
            <div class="wrap"></div>
        </div>

        <div id="footer">
            <div class="container text-center">
                {{ 'title.website_name'|trans() }} Â© 2017
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap-multiselect.js') }}"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% block javascripts %}
        {% endblock %}
        </body>
</html>
